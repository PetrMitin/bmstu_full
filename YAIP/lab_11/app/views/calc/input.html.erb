<div class="container text-center">
  <h1>LABA11</h1>
  <p>Input two numbers</p> <br>
</div>

<div class="d-flex justify-content-center">
  <%= form_tag("/calc/view", method: "get", class: "mb-3") do %>
    <div class="input-group mb-3">
      <span class="input-group-text">Number N:</span>
      <%= number_field_tag(:n, nil, class: "form-control", "aria-label": "Number N") %>
    </div>

    <div class="input-group mb-3">
      <span class="input-group-text">Number M:</span>
      <%= number_field_tag(:m, nil, class: "form-control", "aria-label": "Number M") %>
    </div>

    <div class="d-flex justify-content-center mt-3">
      <%= submit_tag("Calculate result, show as default", name: "calculate_default",class: "btn btn-primary me-2") %>
    </div>
  <% end %>
</div>

<div class="d-flex justify-content-center mt-2">
  <%= link_to("View database as xml", get_xml_path, class: "btn btn-secondary") %>
</div>